<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bobpoole.werewolfclient">

    <application
        android:name=".WerewolfClientApp"
        android:allowBackup="true"
        android:icon="@drawable/android_chrome_512x512"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">
        <activity android:name=".LoginActivity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <uses-permission android:name="android.permission.INTERNET"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameList.GameSelectionActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <uses-permission android:name="android.permission.INTERNET"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainGame.GameActivity">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <uses-permission android:name="android.permission.INTERNET"/>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>